{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Product",
        "description": "E-ticaret ürünleri"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "title": {
            "type": "string",
            "required": true
        },
        "slug": {
            "type": "uid",
            "targetField": "title",
            "required": true
        },
        "shortDescription": {
            "type": "text"
        },
        "description": {
            "type": "richtext"
        },
        "price": {
            "type": "decimal",
            "required": true
        },
        "salePrice": {
            "type": "decimal"
        },
        "currency": {
            "type": "string",
            "default": "USD"
        },
        "sku": {
            "type": "string",
            "unique": true
        },
        "barcode": {
            "type": "string"
        },
        "stockQty": {
            "type": "integer",
            "default": 0
        },
        "manageStock": {
            "type": "boolean",
            "default": true
        },
        "stockStatus": {
            "type": "enumeration",
            "enum": [
                "in_stock",
                "out_of_stock",
                "preorder"
            ],
            "default": "in_stock"
        },
        "thumbnail": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "gallery": {
            "type": "media",
            "multiple": true,
            "allowedTypes": [
                "images"
            ]
        },
        "categories": {
            "type": "relation",
            "relation": "manyToMany",
            "target": "api::category.category"
        },
        "brand": {
            "type": "string"
        },
        "tags": {
            "type": "json"
        },
        "attributes": {
            "type": "component",
            "repeatable": true,
            "component": "product.attribute"
        },
        "variants": {
            "type": "component",
            "repeatable": true,
            "component": "product.variant"
        },
        "minPrice": {
            "type": "decimal"
        },
        "maxPrice": {
            "type": "decimal"
        },
        "isFeatured": {
            "type": "boolean",
            "default": false
        },
        "isNew": {
            "type": "boolean",
            "default": false
        },
        "rating": {
            "type": "decimal"
        },
        "reviewCount": {
            "type": "integer",
            "default": 0
        },
        "weight": {
            "type": "decimal"
        },
        "width": {
            "type": "decimal"
        },
        "height": {
            "type": "decimal"
        },
        "depth": {
            "type": "decimal"
        },
        "seoTitle": {
            "type": "string"
        },
        "seoDescription": {
            "type": "text"
        }
    }
}