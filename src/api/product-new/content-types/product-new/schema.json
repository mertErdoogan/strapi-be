{
  "kind": "collectionType",
  "collectionName": "product_news",
  "info": {
    "singularName": "product-new",
    "pluralName": "product-news",
    "displayName": "ProductNew"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "blocks"
    },
    "shortDescription": {
      "type": "string"
    },
    "sku": {
      "type": "string"
    },
    "price": {
      "type": "decimal"
    },
    "orginalPrice": {
      "type": "decimal"
    },
    "discountPercentage": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::banner.banner",
      "inversedBy": "product_news"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog-category.blog-category",
      "inversedBy": "product_news"
    },
    "specifications": {
      "type": "json"
    },
    "variants": {
      "type": "component",
      "component": "product.variant",
      "repeatable": true
    },
    "isActive": {
      "type": "boolean"
    },
    "weight": {
      "type": "integer"
    }
  }
}
